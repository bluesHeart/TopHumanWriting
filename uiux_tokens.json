{
  "meta": {
    "name": "tophumanwriting_uiux_tokens",
    "version": "0.2"
  },
  "color": {
    "light": {
      "bgPrimary": "#f8f9fa",
      "bgSecondary": "#ffffff",
      "bgTertiary": "#e9ecef",
      "bgInput": "#ffffff",
      "textPrimary": "#212529",
      "textSecondary": "#495057",
      "textMuted": "#6c757d",
      "border": "#dee2e6"
    },
    "dark": {
      "bgPrimary": "#1a1a1a",
      "bgSecondary": "#242424",
      "bgTertiary": "#2e2e2e",
      "bgInput": "#2a2a2a",
      "textPrimary": "#e4e4e4",
      "textSecondary": "#a8a8a8",
      "textMuted": "#707070",
      "border": "#3a3a3a"
    },
    "accent": {
      "default": "#2f80ed",
      "hover": "#2970d0",
      "pressed": "#2159a7",
      "presets": {
        "ocean": "#2f80ed",
        "crimson": "#e53935",
        "teal": "#14b8a6",
        "violet": "#7c3aed",
        "slate": "#475569"
      }
    },
    "semantic": {
      "success": "#16a34a",
      "warning": "#d97706",
      "danger": "#dc2626"
    },
    "progress": {
      "track": "bgTertiary",
      "fill": "accent.default",
      "heightPx": 10,
      "radiusPx": 5
    }
  },
  "typography": {
    "fontFamily": {
      "ui": "Microsoft YaHei UI",
      "mono": "Cascadia Code"
    },
    "sizePx": {
      "xs": 9,
      "sm": 10,
      "md": 11,
      "lg": 13,
      "xl": 15
    }
  },
  "motion": {
    "durationMs": {
      "progressFill": 180
    },
    "easing": {
      "progressFill": "easeOutCubic"
    }
  }
}
